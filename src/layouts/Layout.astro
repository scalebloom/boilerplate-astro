---
// CSS
import "../styles/global.css";
// Components
import Header from "../components/header/Header.astro";
import Footer from "../components/footer/Footer.astro";
// Schema
import BusinessSchema from "../components/schema/BusinessSchema.astro";
import BreadcrumbSchema from "../components/schema/BreadcrumbSchema.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
  canonical?: string;
  includeBusinessSchema?: boolean;
  noindex?: boolean;
}

const {
  title,
  description,
  image,
  canonical,
  includeBusinessSchema = false,
  noindex = false,
} = Astro.props;
const canonicalURL = canonical || Astro.url.pathname;
const fullImageURL = new URL(image || "/og-image.png", Astro.site).href;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Prevent theme flash: apply stored theme before CSS paints -->
    <script is:inline>
      const theme = localStorage.getItem("theme");
      if (theme) document.documentElement.setAttribute("data-theme", theme);
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    <!-- Open Graph (used by Facebook, LinkedIn, and as fallback for X/Twitter) -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={new URL(canonicalURL, Astro.site).href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageURL} />
    <!-- X/Twitter (only card type required, rest falls back to OG) -->
    <meta name="twitter:card" content="summary_large_image" />
    <!-- Canonical URL -->
    <link rel="canonical" href={new URL(canonicalURL, Astro.site).href} />
    <!-- Favicon -->
    <link rel="icon" href="/favicon/favicon.ico" sizes="any" />
    <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/favicon/favicon-192.png"
    />
    <link rel="apple-touch-icon" href="/favicon/apple-touch-icon.png" />
    <!-- Schema.org Structured Data -->
    {includeBusinessSchema && <BusinessSchema />}
    <BreadcrumbSchema currentPath={Astro.url.pathname} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
